<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stunumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_num"
            app:layout_constraintStart_toStartOf="@id/stunumber"
            android:text="学号："
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/stunumber"
            app:layout_constraintBottom_toBottomOf="@id/stunumber"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num"
            app:layout_constraintTop_toTopOf="@id/stunumber"
            app:layout_constraintStart_toEndOf="@id/text_num"
            app:layout_constraintBottom_toBottomOf="@id/stunumber"
            android:background="@null"
            android:hint="请输入学号"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namenumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stunumber"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name"
            app:layout_constraintStart_toStartOf="@id/namenumber"
            android:text="姓名："
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/namenumber"
            app:layout_constraintBottom_toBottomOf="@id/namenumber"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            app:layout_constraintTop_toTopOf="@id/namenumber"
            app:layout_constraintStart_toEndOf="@id/text_name"
            app:layout_constraintBottom_toBottomOf="@id/namenumber"
            android:background="@null"
            android:hint="请输入姓名"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classnumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/namenumber"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_class"
            app:layout_constraintStart_toStartOf="@id/classnumber"
            android:text="班级编号："
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/classnumber"
            app:layout_constraintBottom_toBottomOf="@id/classnumber"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/class_num"
            app:layout_constraintTop_toTopOf="@id/classnumber"
            app:layout_constraintStart_toEndOf="@id/text_class"
            app:layout_constraintBottom_toBottomOf="@id/classnumber"
            android:background="@null"
            android:hint="请输入班级编号"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stateinfo"
        app:layout_constraintTop_toBottomOf="@id/classnumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_state"
            app:layout_constraintStart_toStartOf="@id/stateinfo"
            android:text="状态："
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/stateinfo"
            app:layout_constraintBottom_toBottomOf="@id/stateinfo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/stateinfo"
            app:layout_constraintTop_toTopOf="@id/stateinfo"
            app:layout_constraintBottom_toBottomOf="@id/stateinfo"
            android:entries="@array/state"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timenumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stateinfo"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_time"
            app:layout_constraintStart_toStartOf="@id/timenumber"
            android:text="登记时间："
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/timenumber"
            app:layout_constraintBottom_toBottomOf="@id/timenumber"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            app:layout_constraintTop_toTopOf="@id/timenumber"
            app:layout_constraintStart_toEndOf="@id/text_time"
            app:layout_constraintBottom_toBottomOf="@id/timenumber"
            android:background="@null"
            android:hint="请输入登记时间"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timenumber"
        android:layout_marginTop="30dp"
        android:text="发布"
        android:textStyle="bold"
        android:textSize="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>